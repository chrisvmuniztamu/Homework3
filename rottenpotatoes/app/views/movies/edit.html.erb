<h2>Edit Existing Movie</h2>
<%= form_tag movie_path(@movie), method: :put do %>
  <%= label_tag 'movie[title]', 'Title', class: 'col-form-label' %>
  <%= text_field_tag 'movie[title]', @movie.title, class: 'form-control' %>

  <%= label_tag 'movie[rating]', 'Rating', class: 'col-form-label' %>
  <%= select_tag 'movie[rating]', options_for_select(['G', 'PG', 'PG-13', 'R', 'NC-17'], selected: @movie.rating), class: 'form-control col-1' %>


  <%= label_tag 'movie[release_date]', 'Released On', class: 'col-form-label' %>
  <%= date_select 'movie', :release_date, {}, class: 'form-control col-2 d-inline' %>

  <div class="field">
    <%= label_tag 'movie[director]', 'Director', class: 'col-form-label' %>
    <%= text_field_tag 'movie[director]', @movie.director, class: 'form-control' %>
  </div>
  <br/>
  <%= submit_tag 'Update Movie Info', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', movies_path, class: 'btn btn-secondary' %>
<% end %>
